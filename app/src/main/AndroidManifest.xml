<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ebsma.basic">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:largeHeap="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".splash.SplashActivity" android:theme="@style/SplashTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />

            </intent-filter>

        </activity>
        <activity android:name="com.example.ebsma.basic.views.main.MainActivity"/>

        <activity android:name="com.example.ebsma.basic.views.register.RegisterActivity" />
        <activity android:name="com.example.ebsma.basic.views.login.LoginActivity" />
        <activity android:name="com.example.ebsma.basic.views.setup.SetupActivity" />
        <activity android:name="com.example.ebsma.basic.views.post.PostActivity" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
        <activity
            android:name="com.example.ebsma.basic.views.findfriend.FindFriendsActivity"
            android:parentActivityName="com.example.ebsma.basic.views.main.MainActivity" />
        <activity android:name="com.example.ebsma.basic.views.clickpost.ClickPostActivity" />
        <activity
            android:name="com.example.ebsma.basic.views.setting.SettingsActivity"
            android:parentActivityName="com.example.ebsma.basic.views.main.MainActivity" />
        <activity android:name="com.example.ebsma.basic.views.profile.ProfileActivity" />
        <activity android:name="com.example.ebsma.basic.views.comment.CommentsActivity" />
        <activity android:name="com.example.ebsma.basic.views.resetpassword.ResetPasswordActivity" />
        <activity android:name="com.example.ebsma.basic.views.chat.ChatActivity"
            android:parentActivityName="com.example.ebsma.basic.views.main.MainActivity"/>
        <activity android:name="com.example.ebsma.basic.views.friendslist.FriendsListActivity"
            android:parentActivityName="com.example.ebsma.basic.views.main.MainActivity"/>
    </application>

</manifest>